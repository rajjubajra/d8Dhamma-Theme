<footer class="site-footer">
    {% block footer %}
      <div class="{{ container }}">
        {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
          <div class="site-footer__top clearfix">
            {{ page.footer_first }}
            {{ page.footer_second }}
            {{ page.footer_third }}
            {{ page.footer_fourth }}
          </div>
        {% endif %}
        {% if page.footer_fifth %}
          <div class="site-footer__bottom">
            {{ page.footer_fifth }}
            <div>All Right reserved &copy; {{ 'now'|date('Y') }} | Design & developed by : <a href="https://yellow-website.com" target="_blank">Yellow-Website.com</a></a></div></ul>
          </div>
        {% endif %}
      </div>
    {% endblock %}
  </footer>